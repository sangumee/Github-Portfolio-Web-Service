doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='description', content='')
		meta(name='author', content='')
		title Dashboard - MyPage
		include ../libraries/bootstrapcss.pug
		//- include ../libraries/googleadsense.pug
		// Font Awesome CSS CDN
		link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.7.2/css/all.css', integrity='sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr', crossorigin='anonymous')
		// Layout CSS
		block customCSS
		link(href='/stylesheets/mypage/mypage.css', rel='stylesheet')
body#page-top
	nav.navbar.navbar-expand.navbar-dark.bg-dark.static-top
		a.navbar-brand.mr-1(href='/') ExpressMe
		button#sidebarToggle.btn.btn-link.btn-sm.text-white.order-1.order-sm-0(href='#')
			i.fas.fa-bars
		// Navbar Search
		form.d-none.d-md-inline-block.form-inline.ml-auto.mr-0.mr-md-3.my-2.my-md-0
		// Navbar
		ul.navbar-nav.ml-auto.ml-md-0
			li.nav-item.dropdown.no-arrow.mx-1
				a#alertsDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
					i.fas.fa-bell.fa-fw
					span.badge.badge-danger 9+
			li.nav-item.dropdown.no-arrow.mx-1
				a#messagesDropdown.nav-link.dropdown-toggle(href=`/admin/mypage/contact/${userId}`, role='button')
					i.fas.fa-envelope.fa-fw
					span.badge.badge-danger#counter
			li.nav-item.dropdown.no-arrow
				a#userDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
					i.fas.fa-user-circle.fa-fw
				.dropdown-menu.dropdown-menu-right(aria-labelledby='userDropdown')
					a.dropdown-item(href=`/${userId}`) My Portfolio Main
					.dropdown-divider
					a.dropdown-item(href='#', onclick='logout()') Logout
	#wrapper
		// Sidebar
		ul.sidebar.navbar-nav.toggled
			li.nav-item.active
				a.nav-link(href=`/admin/mypage/${userId}`)
					i.fas.fa-fw.fa-tachometer-alt
					span Dashboard
			li.nav-item
				a.nav-link(href=`/admin/mypage/contact/${userId}`)
					i.fas.fa-fw.fa-comments
					span Contact
			li.nav-item
				a.nav-link(href=`/admin/mypage/user/${userId}`)
					i.fas.fa-fw.fa-user
					span User Information
		block content
script.
	let userId=!{JSON.stringify(userId)}
