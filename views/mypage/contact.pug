extends layout.pug

block customCSS
	link(href='/stylesheets/mypage/contact.css', rel='stylesheet')


block content
	#content-wrapper
		.container
			.messaging
				.inbox_msg
					.inbox_people
						.headind_srch
							.recent_heading
								h4 Recent
							.srch_bar
								.stylish-input-group
									input.search-bar(type='text', placeholder='Search')
									span.input-group-addon
										button(type='button')
											i.fa.fa-search(aria-hidden='true')
						.inbox_chat
							//- .chat_list.active_chat
							//- 	.chat_people
							//- 		.chat_img
							//- 			img(src='https://ptetutorials.com/images/user-profile.png', alt='sunil')
							//- 		.chat_ib
							//- 			h5
							//- 				| Sunil Rajput 
							//- 				span.chat_date Dec 25
							//- 			p
							//- 				| Test, which is a new approach to have all solutions
							//- 				| astrology under one roof.
							each roomData in room
								.chat_list
									.chat_people
										.chat_img
											img(src='https://ptetutorials.com/images/user-profile.png', alt='sunil')
										.chat_ib
											a(href='#' onclick='joinChat()')
												- if (roomData.chatSender === userId){
												h5(id=`${roomData.roomName}`)
													=`${roomData.chatReceiver}`
												- } else {
												h5(id=`${roomData.roomName}`)
													=`${roomData.chatSender}`
												- }
											span.chat_date Dec 25
											p
												| Test, which is a new approach to have all solutions
												| astrology under one roof.
					.mesgs
						.msg_history
						// Send Message
						.type_msg
							.input_msg_write
								form(id='chat')
									input.write_msg(type='text' autocomplete='off' placeholder='Type a message' id='message')
									button.msg_send_btn(type='button')
										i.fa.fa-paper-plane(aria-hidden='true')

