doctype html
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description', content='')
  meta(name='author', content='')
  title=`${userId}'s Portfolio`
  // Bootstrap core CSS
  link(href='stylesheets/core/bootstrap.min.css', rel='stylesheet')
  // Custom styles for this template
  link(href='/stylesheets/portfolio_detail.css', rel='stylesheet')
// Navigation
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark(id="first_nav")
  .container
    a.navbar-brand(href=`/${userId}`)=`${userId}'s Portfolio`
    button.navbar-toggler(type='button' id="toolButton", data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarResponsive.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item.active
          a.nav-link(href='/')
            | Home
            span.sr-only (current)
        - if(ownerCheck === userId){
           a.nav-link(href='/logout') Logout
        - } else {
           a.nav-link(href='/auth/github') Login
        - }
        li.nav-item
          a.nav-link(href='#') Services
        li.nav-item
          a.nav-link(href='#') Contact
.toolbar.navbar(id="second_nav")
  select#type-select(onchange='selectBoxUpdate();')
    option(value='All') All Achievements
    option(value='Project') Projects
    option(value='Certificate') Certifications
    option(value='Education') Education
  - if(ownerCheck === userId) {
  button(class='button' type='button' onclick=`window.location.href='/${userId}/create'`) Create Information
  -}
  input#input-url(type='hidden', value='Copied!')
  button(class='button' id='btn-copy') Copy this URL
// Page Content
.container
  // Page Heading
  .row
    each projects in dataarray
      div(class=`${projects.type} col-lg-3 col-md-4 col-sm-6 portfolio-item`)
        .card.h-100
          .card-type
            p.text
             =projects.type
          img.card-img-top(src=`/images/member/${userId}/${projects.imgurl}`, onerror=`this.src='/images/app/${projects.type}.png'`)
          .card-body
            h4.card-title
              a(href=`/${userId}/${projects.id}`)
                = projects.name
            p.card-text
              = projects.explanation
          a(href= `/${userId}/` + `${projects.id}` class="viewDetail") View Details
  // /.row
  // Pagination
  ul.pagination.justify-content-center
    li.page-item
      a.page-link(href='#', aria-label='Previous')
        span(aria-hidden='true') &laquo;
        span.sr-only Previous
    li.page-item
      a.page-link(href='#') 1
    li.page-item
      a.page-link(href='#') 2
    li.page-item
      a.page-link(href='#') 3
    li.page-item
      a.page-link(href='#', aria-label='Next')
        span(aria-hidden='true') &raquo;
        span.sr-only Next
// Footer
footer.bg-dark
  .container
    p.m-0.text-center.text-white 
      =`Copyright Â© ${userId} 2018`
